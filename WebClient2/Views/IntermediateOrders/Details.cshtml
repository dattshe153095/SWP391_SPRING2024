@using DataAccess.Library;
@model DataAccess.ViewModel.OrderViewModel;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>IntermediateOrder</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="IntermediateOrders" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Mã Trung Gian</label>
                <input asp-for="code" class="form-control" disabled readonly />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Người bán</label>
                <input value="@(Model.account_create.id+" | " + Model.account_create.name)" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label class="control-label">Trạng thái</label>
                <input asp-for="state" class="form-control" disabled />
                <span asp-validation-for="state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Chủ đề trung gian (*)</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giá tiền (*)</label>
                <input type="number" asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="fee_type" id="fee_type1" name="fee_type" value="true" />
                    <label class="form-check-label" for="fee_type1">
                        Bên bán
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="fee_type" id="fee_type2" name="fee_type" value="false" />
                    <label class="form-check-label" for="fee_type2">
                        Bên mua
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Phí trung gian</label>
                <input type="number" asp-for="fee_amount" class="form-control" disabled />
                <span asp-validation-for="fee_amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tổng tiền bên mua cần thanh toán</label>
                <input type="number" asp-for="price" class="form-control" disabled />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tiền bên bán thực nhận </label>
                <input type="number" asp-for="earn_amount" class="form-control" disabled />
                <span asp-validation-for="earn_amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mô tả</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Phương thức liên lạc</label>
                <input asp-for="contact" class="form-control" />
                <span asp-validation-for="contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nội dung ẩn (*)</label>
                <textarea asp-for="hidden_content" class="form-control" id="hidden_content" name="hidden_content" rows="5"></textarea>
                <span asp-validation-for="hidden_content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="is_public" id="is_public1" name="is_public" value="true" />
                    <label class="form-check-label" for="is_public1">
                        Hiện công khai
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="is_public" id="is_public2" name="is_public" value="false" />
                    <label class="form-check-label" for="is_public2">
                        Ẩn giới hạn
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Thời gian tạo</label>
                <input type="datetime" asp-for="create_at" class="form-control" disabled />
                <span asp-validation-for="create_at" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thời gian tạo</label>
                <input type="datetime" asp-for="update_at" class="form-control" disabled />
                <span asp-validation-for="update_at" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thời gian tạo</label>
                <input type="text" asp-for="link_share" class="form-control" disabled readonly/>
                <span asp-validation-for="link_share" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @{
        if (Model.status == IntermediateOrderEnum.MOI_TAO ||
        Model.status == IntermediateOrderEnum.SAN_SANG_GIAO_DICH ||
        Model.status == IntermediateOrderEnum.BEN_MUA_KHIEU_NAI ||
        Model.status == IntermediateOrderEnum.YEU_CAU_QUAN_TRI ||
        Model.status == IntermediateOrderEnum.BEN_BAN_DANH_DAU_KHIEU_NAI)
        {
            <a asp-action="Edit" asp-route-id="@Model?.code">Edit</a>
        }
    }
    @{
        if (Model.status == IntermediateOrderEnum.SAN_SANG_GIAO_DICH && Model.account_buy == null)
        {
            <a asp-action="Buy" asp-route-id="@Model?.code">Buy</a>
        }
    }
    <a asp-action="Index">Back to List</a>
</div>
