@using DataAccess.DAO;
@model IEnumerable<Business.Models.Withdrawal>
<style>
    /* Đóng khung cho bảng */
    table {
        max-width: 100%;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        /* Định dạng cho các ô tiêu đề */
        table th {
            background-color: #f8f9fa;
            font-weight: 600;
            padding: 10px;
            border: 1px solid #dee2e6; /* Thêm viền cho ô tiêu đề */
        }

        /* Định dạng cho các ô dữ liệu */
        table td {
            padding: 10px;
            border: 1px solid #dee2e6; /* Thêm viền cho ô dữ liệu */
        }

        /* Định dạng input trong ô tiêu đề */
        table input.form-control {
            width: 100%;
            border: none;
            border-radius: 4px;
            background-color: #f8f9fa;
            padding: 5px 10px;
            box-sizing: border-box;
        }

    /* Định dạng nút "Chi tiết" */
    .btn-primary {
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        cursor: pointer;
        color: #fff;
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            color: #fff;
            background-color: #0056b3;
            border: none;
        }

    /* Định dạng các hàng chẵn */
    table tbody tr:nth-child(even) {
        background-color: #f9f9f9; /* Màu xám nhạt */
    }

    /* Định dạng các hàng lẻ */
    table tbody tr:nth-child(odd) {
        background-color: #ffffff; /* Màu trắng */
    }

</style>
<div><h1>Quản Lý Đơn Rút </h1></div>
<table class="table table-hover">
    <thead>
        <tr>
            <th><input class="form-control" value="" placeholder="Search Id" /></th>
            <th><input class="form-control" value="" placeholder="Search số tiền" /></th>
            <th><input class="form-control" value="" placeholder="Bank name" /></th>
            <th><input class="form-control" value="" placeholder="Search trạng thái" /></th>
            <th><input class="form-control" value="" placeholder="Người tạo" /></th>
            <th><input type="datetime" class="form-control" value="" placeholder="Ngày tạo" /></th>
            <th><input type="datetime" class="form-control" value="" placeholder="Thời gian cập nhật" /></th>
            <th></th>

        </tr>
        <tr>
            <th>Mã rút tiền</th>
            <th>Số tiền rút</th>
            <th>Ngân hàng</th>
            <th>Trạng thái</th>
            <th>Người tạo</th>
            <th>Ngày tạo</th>
            <th>Ngày cập nhật</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.amount</td>
                <td>@item.bank_name</td>
                <td>@item.state</td>
                <td>@AccountDAO.GetAccountWithId(item.create_by).name</td>
                <td>@item.create_at.ToString("dd/MM/yyyy")</td>
                <td>@item.update_at.ToString("dd/MM/yyyy")</td>
                <td><a class="btn btn-primary open-modal" asp-action="DetailWithdrawal" asp-route-id="@item.id">Chi tiết</a></td>
            </tr>
        }
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://kit.fontawesome.com/6ae4d71e22.js" crossorigin="anonymous"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}