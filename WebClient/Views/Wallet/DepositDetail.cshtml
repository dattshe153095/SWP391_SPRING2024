@using BussinessObject.Models;
@using DataAccess.DAO;
@using WebClient
@using WebClient.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Deposit deposit = ViewBag.Deposit;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Trade&Deal Hub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />

    <style>
        body {
            margin: 0;
        }

        .ul-side-bar {
            list-style-type: none;
            margin: 0;
            padding: 0;
            max-width: 100%;
            background-color: #f1f1f1;
            max-height 100%;
            overflow: auto;
        }

            .ul-side-bar li {
                margin: 0;
            }

                .ul-side-bar li a {
                    display: block;
                    color: #000;
                    padding: 8px 16px;
                    text-decoration: none;
                }

                    .ul-side-bar li a.active {
                        background-color: #04AA6D;
                        color: white;
                    }

                    .ul-side-bar li a:hover:not(.active) {
                        background-color: #555;
                        color: white;
                    }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Trade&DealHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar- gler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        <!-- Added ml-auto class here -->
                        @if (ViewBag.accountId == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="dropdown nav-item"><a aria-haspopup="true" href="#" class="nav-link" aria-expanded="false"><i class="fa-regular fa-bell" style="color:black;"></i></a></li>
                            <li class="nav-item">
                                <div class="dropdown">
                                    <button class="dropbtn">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile">@AccountDAO.GetAccountWithId(ViewBag.accountId).name</a>
                                    </button>
                                    <div class="dropdown-content">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Wallet">Wallet</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut"> LogOut</a>
                                    </div>
                                </div>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-body">
        <main role="main" class="pb-3">
            <div class="text-center">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <ul class="ul-side-bar" style="text-align: left;">
                                    <li><a asp-controller="Wallet" asp-action="Index">All Wallet</a></li>
                                    <li><a asp-controller="Wallet" asp-action="WithdrawalTransaction">All Withdrawal</a></li>
                                    <li><a class="active" asp-controller="Wallet" asp-action="DepositTransaction">All Deposit</a></li>
                                    <li><a asp-controller="Wallet" asp-action="ReportTransaction">All Report</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <!-- Phần trung tâm -->
                        <h1>Phần Trung Tâm</h1>
                        <form method="post" asp-controller="Wallet" asp-action="DepositHandle">
                            <table class="table">
                                <tr>
                                    <td><input type="hidden" id="deposit_id" name="deposit_id" class="form-control" value="@deposit.id"></td>
                                </tr>
                                <tr>
                                    <td>Name</td>
                                    <td><input type="text" id="name" name="name" class="form-control" value="@WalletDAO.GetWalletAccountById(deposit.wallet_id).name" disabled></td>
                                </tr>
                                <tr>
                                    <td>Amount</td>
                                    <td><input type="text" id="title" name="title" class="form-control" value="@deposit.amount" disabled></td>
                                </tr>
                                <tr>
                                    <td>fee</td>
                                    <td><input type="text" id="type" name="type" class="form-control" value="@deposit.fee" disabled></td>
                                </tr>
                                <tr>
                                    <td>Description</td>
                                    <td><input type="text" id="description" name="description" class="form-control" value="@deposit.desctiption" disabled></td>
                                </tr>
                                <tr>
                                    <td>Status</td>
                                    <td>
                                        <select id="status" name="status" class="form-control">
                                            @{
                                                if (deposit.status == "pending")
                                                {
                                                    <option value="pending" selected>pending</option>
                                                    <option value="done">done</option>
                                                    <option value="error">error</option>
                                                }
                                                else if (deposit.status == "done")
                                                {
                                                    <option value="pending">pending</option>
                                                    <option value="done" selected>done</option>
                                                    <option value="error">error</option>
                                                }
                                                else
                                                {
                                                    <option value="pending">pending</option>
                                                    <option value="done">done</option>
                                                    <option value="error" selected>error</option>
                                                }

                                            }

                                            <!-- Thêm các option khác nếu cần -->
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Create at</td>
                                    <td><input type="text" id="create_at" name="create_at" class="form-control" value="@deposit.create_at" disabled></td>
                                </tr>
                                <tr>
                                    <td colspan="2"> <button type="submit" class="btn btn-primary">Submit</button></td>
                                </tr>

                            </table>
                        </form>
                    </div>
                    <div class="col-sm-2">
                        <!-- Phần phải -->
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Trade%Deal Hub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
