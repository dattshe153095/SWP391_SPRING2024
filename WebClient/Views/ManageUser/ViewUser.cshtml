@using BussinessObject.Models;
@using DataAccess.DAO;
@using WebClient
@using WebClient.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    List<Account> accounts = ViewBag.Accounts;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
            position: relative;
        }

        input {
            width: 100%;
            box-sizing: border-box;
        }

        .search-icon {
            position: absolute;
            right: 8px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebClient</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">LogOut</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ProfileAdmin">ProfileAdmin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ManageUserAccount" asp-action="ViewUserAccount">Manager</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            <div class="text-center" id="accountTable">
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Description</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>ID Role</th>
                        <th>Is Delete</th>
                        <th>Delete</th>
                        <th>View Account</th>
                        <th>Delete Account</th>
                    </tr>
                    @{
                        foreach (Account a in accounts)
                        {
                            <tr id="row_@a.Id">
                                <td>@a.Id</td>
                                <td id="name" data-name="@a.Name">@a.Name</td>
                                <td>@a.Username</td>
                                <td>@a.Email</td>
                                <td>@a.Password</td>
                                <td>@a.Description</td>
                                <td>@a.CreatedAt</td>
                                <td>@a.UpdatedAt</td>
                                <td>@a.IdRole</td>
                                <td>@a.IsDelete</td>
                                <td><a asp-controller="ManageUser" asp-action="DeleteAccount">Delete</a></td>
                                <td><a asp-controller="ManageUser" asp-action="UserDetail" asp-route-userId="@a.Id">Detail</a></td>
                                <td><a href="#" id="deleteAction" data-id="@a.Id">Delete</a></td>
                            </tr>
                        }
                    }

                </table>
        </main>
    </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebClient - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

<script>
    $(document).ready(function () {
        console.log("Script is running...");
        $("#deleteAction").click(function (e) {
            e.preventDefault();
            var userId = $(this).data("id");

            var nameElement = document.getElementById("name");
            var nameValue = nameElement.getAttribute("data-name");

            var userConfirmed = confirm("Are you sure you want delete " + nameValue + " ?");
            if (userConfirmed) {
                $.ajax({
                    url: '/ManageUser/DeleteAccount?userId=' + userId,
                    type: 'POST',
                    success: function (data) {
                        if (data.success) {
                            // Xóa dòng chứa thông tin tài khoản khỏi bảng
                            $('#accountTable #row_' + userId).remove();
                        } else {
                            alert('Xóa không thành công. Lỗi: ' + data.error);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi gửi yêu cầu xóa.');
                    }
                });
            }
        });
    });
</script>

</html>
