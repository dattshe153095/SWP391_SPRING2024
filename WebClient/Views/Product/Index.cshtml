@using BussinessObject.Models;
@using DataAccess.DAO;
@using WebClient
@using WebClient.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    List<Product> products = ViewBag.Products;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">Trade&Deal Hub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">LogOut</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="text-center" id="ProductTable">
                <div>Thông tin sản phẩm</div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Hình ảnh</th>
                            <th scope="col">Mã Số Hàng Hóa</th>
                            <th scope="col">Tên Sản Phẩm</th>
                            <th scope="col">Đơn Giá</th>
                            <th scope="col">Số Lượng</th>
                            <th scope="col">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in products)
                        {
                            <tr>
                                <td><img src="@product.image" alt="@product." style="max-width: 100px;" /></td>
                                <td>@product.code</td>
                                <td>name</td>
                                <td>@product.price</td>
                                <td>@product.quantity</td>
                                <td><button type="button" class="btn btn-primary" onclick="showProductDetail('@product.id')">Thông tin</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    
    <!-- Modal -->
    <div class="modal fade" id="productDetailDialog" tabindex="-1" role="dialog" aria-labelledby="productDetailDialogTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productDetailDialogTitle">Thông tin sản phẩm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="productDetailContent">
                    <!-- Nội dung chi tiết sản phẩm sẽ được thêm vào đây -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Trade&Deal Hub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script>
        function showProductDetail(productId) {
            var productDetail = getProductDetail(productId);
            $("#productDetailDialog").modal("show");
        }

        function getProductDetail(productId) {
                        $.ajax({
                url: '/Product/GetProductDetail',
                type: 'GET',
                data: { productId: productId },
                success: function (data) {
                    if (data.hasOwnProperty('message')) {
                        // Xử lý thông báo không tìm thấy sản phẩm
                        console.log(data.message);
                    } else {
                        var product = data;
                        var html = '<div>';
                        html += '<img src="' + product.image + '" alt="' + product.name + '" style="max-width: 100px;" />';
                        html += '<p><strong>Mã số hàng hóa:</strong> ' + product.code + '</p>';
                        html += '<p><strong>Tên sản phẩm:</strong> ' + product.name + '</p>';
                        html += '<p><strong>Đơn giá:</strong> ' + product.price + '</p>';
                        html += '<p><strong>Số lượng:</strong> ' + product.quantity + '</p>';
                        html += '<p><strong>Hành động:</strong> ' + product.action + '</p>';
                        html += '</div>';
                        // Xử lý hiển thị thông tin sản phẩm
                        console.log(html);
                        $('#productDetailContent').html(html);
                    }
                },
                error: function () {
                    // Xử lý lỗi
                    console.log('Đã xảy ra lỗi khi lấy thông tin sản phẩm.');
                }
                });
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>